            <li><a href="#" id="open-sidebar"><i class="fa-solid fa-bars"></i></a></li>
        </ul>
    </nav>
    <div class="sidebar">
        <h1 class="title"><i class="fa-solid fa-cubes"></i> Artspire</h1>
        <nav>
            <ul>
                <li><a href="index.html">Home</a></li>
                <li><a href="about.html">About</a></li>
